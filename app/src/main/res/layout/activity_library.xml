<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="60dp"
        android:paddingBottom="16dp">

        <ImageView
            android:id="@+id/ivLibraryImage"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@android:drawable/ic_menu_gallery"
            android:scaleType="centerCrop"
            android:background="@color/card_background"
            android:contentDescription="Playlist Cover"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnPlayPlaylist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_media_play"
            app:backgroundTint="@color/teal_200"
            app:tint="@color/black"
            app:fabSize="normal"
            android:contentDescription="Play Playlist"
            android:layout_marginEnd="-20dp"
            android:layout_marginBottom="-15dp"
            app:layout_constraintBottom_toBottomOf="@id/ivLibraryImage"
            app:layout_constraintEnd_toEndOf="@id/ivLibraryImage" />

        <TextView
            android:id="@+id/tvLibraryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Music Library"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/primary_text"
            android:gravity="center"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/ivLibraryImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ListView
        android:id="@+id/lvAllSongs"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <include layout="@layout/view_mini_player" />
    <include layout="@layout/view_bottom_nav" />

</LinearLayout>